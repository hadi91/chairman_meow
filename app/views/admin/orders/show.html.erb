<div class="container">

  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <h1>Order No.<%= @order.id %></h1>
    </div>
  </div><!--closes row-->
  <hr>

  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <h4>Order Status: <%= @order.orderstatus %></h4>

      <%= simple_form_for @order, url: admin_order_path, method: :put do |f| %>
      <%= f.select :orderstatus, ["New", "Pending Payment", "Payment Approved", "Awaiting Pickup", "Shipped", "Delivered", "Disputed", "Refunded", "Cancelled"] %>
      <%= f.submit %>
      <% end  %>

      <h4>This order has <%= @order.line_items.count %> items </h4>
    </div><!--closes orderstatus col-->
  </div><!--closes row-->

  <hr>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <% @lineitems.each do |lineitem| %>
      <p><%= lineitem.product.breed %>, <%= lineitem.product.gender %></p>
      <p><%= lineitem.quantity %></p>
      <p>SGD$<%= lineitem.product.price %></p>
      <hr>
      <% end %>

      <%= link_to "Edit this order", edit_admin_order_path %>

    </div><!--closes list col-->
  </div><!--closes row-->



</div><!--closes container-->

<div class="container">
  <div class="row">
    <h1>Order History</h1>
  </div>

  <hr>
  <div class="row">


      <% @orders.each do |order| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-9">
              <h1><%= link_to "Order No.#{order.id}", meow_order_path(order) %></h1>
            </div>
            <div class="col-md-3">
              <h2>SGD $<%= order.total_price %></h2>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <p><%= order.orderstatus %></p>
          <p>Ordered on <%= order.created_at %></p>
        </div>
      </div>
      <% end %>

  </div>
</div>

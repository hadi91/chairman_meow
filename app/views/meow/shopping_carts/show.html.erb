<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 col-xs-12">
      <% if @line_items.empty? %>
      <p>You don't seem to have added any cats yet! Click here to shop for some!</p>
      <% else %>
      <div class="panel panel-default">
        <div class="panel-heading"><h1>Cats in your cart</h1></div>
        <!-- <div class="panel-body">
          <p>...</p>
        </div> -->

        <!-- Table -->
        <table class="table">
          <tr>
            <th class="table-breed">Breed</th>
            <th class="table-small">Price</th>
            <th class="table-small">Reserved</th>
            <th class="table-small">Available</th>
            <th>Update?</th>
            <th></th>
            <th>Remove from cart?</th>
          </tr>
          <tr>
            <% @line_items.each do |line_item| %>
            <td><%= link_to line_item.product.breed, meow_product_path(line_item.product) %></td>
            <td>$<%= line_item_price = line_item.quantity * line_item.product.price %></td>
            <td><%= line_item.quantity %></td>
            <td><%= line_item.product.quantity %></td>
            <td><%= simple_form_for line_item, url: meow_line_item_path(line_item_id: line_item), method: :patch do |f| %>
            <% total_quantity = line_item.product.quantity + line_item.quantity %>
            <%= f.input :quantity, collection: 1..total_quantity, label: false %></td>
            <td><%= f.submit 'Update', class: 'btn btn-primary' %><% end %></td>
            <td><%= button_to 'Remove', meow_line_item_path(line_item_id: line_item), method: :delete, class: 'btn btn-danger' %></td>
          </tr>
          <% end %>
          <% end %>
          <tr>
            <td>Total price</td>
            <td>$<%= @shopping_cart.total_price %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>Checkout cart</td>
          </tr>
        </table>
      </div>


      <h3></h3>

    </div>
  </div>
</div>
